pkgname=librcimmixcons-git
pkgver=0.0.1
pkgrel=0
pkgdesc="A RCImmixCons implementation in Rust"
arch=('x86_64')
url="https://github.com/lummax/librcimmixcons"
license=('MIT')
depends=('gcc-libs')
makedepends=()
options=(!strip)

prepare() {
    rm -f ${pkgname}-${pkgver}
    ln -s ../../../ ${pkgname}-${pkgver}
}

build() {
    cd ${pkgname}-${pkgver}
	make all CARGO_OPTS="--release --features no_large_object_space"
}

package() {
    cd ${pkgname}-${pkgver}
	make install PKGVER=${pkgver} PREFIX=${pkgdir}/usr/
}
